<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:id="@+id/playerItem">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/player_profile"
                android:adjustViewBounds= "true"
                android:src="@drawable/kent_bazemore"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kent Bazemore"
        android:id="@+id/player_name_text"
        android:textAlignment="center"
        android:textColor="#252525"
        android:singleLine="true"
        android:layout_below="@+id/player_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="99"
        android:id="@+id/player_number_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#252525"
        android:layout_below="@+id/player_name_text"
        android:layout_centerHorizontal="true"
        android:padding="5dp" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Shooting Guard / Forward"
                android:id="@+id/player_position_text"
                android:textColor="#252525"
                android:textSize="15sp"
        android:layout_below="@+id/player_number_text"
        android:layout_centerHorizontal="true"
        android:padding="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET SEASON STATS"
        android:id="@+id/get_stats_btn"
        android:background="#80ffffff"
        android:textColor="#252525"
        android:layout_below="@+id/player_position_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>